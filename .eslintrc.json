{
    "env": {
        "browser": true,
        "es6": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react",
        "jest"
    ],
    "rules": {
        "space-before-function-paren": 0,
        "quotes": [2, "single", { "avoidEscape": true }],
        "operator-linebreak": 0,
        "react/jsx-tag-spacing": [
            "error",
            {
                "beforeSelfClosing": "always"
            }
        ],
        "no-throw-literal": 2,
        "no-useless-escape": 0,
        "no-console": "warn",
        "no-eval": "error",
        "react/react-in-jsx-scope": "off"
    }
}
